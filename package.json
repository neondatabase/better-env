{
  "name": "better-env",
  "version": "0.2.0",
  "description": "Runtime + CLI to sync local .env files with remote providers and validate env configs.",
  "author": "Andre Landgraf <andre@neon.tech>",
  "type": "module",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neondatabase/better-env.git"
  },
  "homepage": "https://github.com/neondatabase/better-env#readme",
  "bugs": {
    "url": "https://github.com/neondatabase/better-env/issues"
  },
  "bin": {
    "better-env": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./adapters/vercel": "./dist/adapters/vercel.js",
    "./adapters/netlify": "./dist/adapters/netlify.js",
    "./adapters/cloudflare": "./dist/adapters/cloudflare.js",
    "./adapters/railway": "./dist/adapters/railway.js",
    "./adapters/fly": "./dist/adapters/fly.js",
    "./adapters/convex": "./dist/adapters/convex.js",
    "./config-schema": "./dist/config-schema/index.js",
    "./validate-env": "./dist/validate-env/index.js"
  },
  "files": [
    "dist",
    "skills",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "bun src/cli.ts --help",
    "test": "bun test",
    "test:ci": "bun test test/e2e/runtime*.test.ts",
    "test:e2e:vercel": "BETTER_ENV_REAL_VERCEL_E2E=1 bun test test/e2e/vercel-live.test.ts",
    "test:e2e:netlify": "BETTER_ENV_REAL_NETLIFY_E2E=1 bun test test/e2e/netlify-live.test.ts",
    "test:e2e:railway": "BETTER_ENV_REAL_RAILWAY_E2E=1 bun test test/e2e/railway-live.test.ts",
    "test:e2e:fly": "BETTER_ENV_REAL_FLY_E2E=1 bun test test/e2e/fly-live.test.ts",
    "test:e2e:railway:runtime": "bun test test/e2e/runtime-railway.test.ts",
    "test:e2e:cloudflare": "bun test test/e2e/runtime-cloudflare.test.ts",
    "test:e2e:fly:runtime": "bun test test/e2e/runtime-fly.test.ts",
    "test:e2e:convex:runtime": "bun test test/e2e/runtime-convex.test.ts",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:ci": "tsc --noEmit -p tsconfig.ci.json",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@next/env": "^16.0.10",
    "commander": "^14.0.3",
    "zod": "^4"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "bun-types": "^1.3.9",
    "prettier": "^3.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
