{
  "name": "better-env",
  "version": "0.1.0",
  "description": "Runtime + CLI to sync local .env files with remote providers and validate env configs.",
  "type": "module",
  "private": false,
  "license": "Apache-2.0",
  "bin": {
    "better-env": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./adapters/vercel": "./dist/adapters/vercel.js",
    "./config-schema": "./dist/config-schema/index.js",
    "./validate-env": "./dist/validate-env/index.js"
  },
  "files": [
    "dist",
    "skills",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "bun src/cli.ts --help",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "fmt": "prettier --write .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@next/env": "^16.0.10",
    "zod": "^4"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/node": "^22.10.0",
    "prettier": "^3.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
